@model Michaellrg.MOIP.Web.Models.AddressView
@{
    ViewBag.Title = "Address";
}
<div class="c-shop-cart-page-1">
    @using (Html.BeginForm("Address", "Checkout", FormMethod.Post))
    {
        <div class="col-xs-10 col-sm-10">
            <div class="w100 clearfix">
                <ul class="orderStep orderStepLook2">
                    <li>
                        <a href="#">
                            <i class="fa fa-user"></i> <span> Customer</span>
                        </a>
                    </li>

                    <li class="active">
                        <a href="#">
                            <i class="fa fa-map-marker "></i> <span> Address</span>
                        </a>
                    </li>
                    <!-- <li><a href="checkout-2.html"> <i class="fa fa fa-envelope  "></i>
                         <span> Billing </span></a></li>
                     <li><a href="checkout-3.html"><i class="fa fa-truck "> </i><span>Shipping</span> </a></li>-->
                    <li><a href="#"><i class="fa fa-money"> </i><span>Payment</span> </a></li>
                    <li>
                        <a href="#"> <i class="fa fa-check-square "> </i><span>Order</span></a>
                    </li>
                </ul>
                <!--/.orderStep end-->
            </div>

            <div class="w100 clearfix">
                <div class="row userInfo">
                    <div class="col-lg-12">
                        <h2 class="block-title-2">Please fill out the form below. </h2>
                    </div>

                    <div class="col-xs-12 col-sm-12">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group required">
                            <label for="Street">Street Address <sup>*</sup> </label>
                            @Html.EditorFor(model => model.Street, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group required">
                            <label for="StreetNumber">Street Number <sup>*</sup> </label>
                            @Html.EditorFor(model => model.StreetNumber, new { htmlAttributes = new { @class = "form-control", type="number" } })
                            @Html.ValidationMessageFor(model => model.StreetNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group ">
                            <label for="Complement">Complement</label>
                            @Html.EditorFor(model => model.Complement, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Complement, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group required">
                            <label for="State">State <sup>*</sup> </label>
                            @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group required">
                            <label for="City">City <sup>*</sup> </label>
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group required">
                            <label for="District">District <sup>*</sup></label>
                            @Html.EditorFor(model => model.District, new { htmlAttributes = new { @class = "form-control",  } })
                            @Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })
                        </div>
                        
                       
                        <div class="form-group col-lg-5 col-sm-5 required">
                            <label for="ZipCode">Zip Code <sup>*</sup> </label>
                            @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                            @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                        </div>

                    </div>

                </div>
                <!--/row end-->

            </div>

        </div>
        

        <div class="c-cart-buttons col-lg-12 col-md-12">
            <br />
            <a href="@Url.Action("Index", "Home")" class="btn c-btn btn-lg c-btn-red c-btn-square c-font-white c-font-bold c-font-uppercase c-cart-float-l">Continue Shopping</a>
            <input type="submit" value="Checkout" class="btn c-btn btn-lg c-theme-btn c-btn-square c-font-white c-font-bold c-font-uppercase c-cart-float-r" />

        </div>
    }
</div>